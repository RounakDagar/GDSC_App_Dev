<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/label_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Travel Dates"/>

    <DatePicker
        android:id="@+id/date_picker_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_dates"/>

    <DatePicker
        android:id="@+id/date_picker_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_picker_start"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_next_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
